@{
    
    Layout = "_Layout2";

}
<section class="w-100 pt-5 pb-5 bg-light d-flex justify-content-center">
    <div class="container">
        <!-- Tarjeta de Bienvenida -->
        <div class="card mb-4 mx-auto shadow-lg rounded-lg" style="max-width: 800px; border-radius: 15px;">
            <div class="card-body text-center">
                <h2 class="display-4 font-weight-bold  text-black" style="color: #28a745;">Bienvenido a Task Flow</h2>
                <p class="lead text-muted mb-4" style="max-width: 700px; margin: auto;">Gestiona tus tareas y proyectos con facilidad</p>
                <div class="d-flex justify-content-center mt-4">
                    <a class="btn btn-success btn-lg mr-2" href="@Url.Action("InicioSesion", "Login")" role="button">Log In</a>
                    <a class="btn btn-secondary btn-lg" href="@Url.Action("Registro", "Login")" role="button">Register</a>
                </div>
            </div>
        </div>

        <!-- Carrusel de Imágenes -->
        <div id="carouselExampleIndicators" class="carousel slide mb-4" style="max-width: 700px; margin: auto;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://images.pexels.com/photos/416405/pexels-photo-416405.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100 rounded-lg" alt="Task Manager">
                </div>
                <div class="carousel-item">
                    <img src="https://images.pexels.com/photos/372787/pexels-photo-372787.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100 rounded-lg" alt="Task Manager">
                </div>
                <div class="carousel-item">
                    <img src="https://images.pexels.com/photos/3183153/pexels-photo-3183153.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100 rounded-lg" alt="Task Manager">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-success rounded-circle p-2" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-success rounded-circle p-2" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
