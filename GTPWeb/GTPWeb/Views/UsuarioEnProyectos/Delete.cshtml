@model GTPWeb.Models.UsuarioEnProyecto

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title">Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete this?</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Proyecto)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Proyecto.Nombre)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Usuario.Nombre)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Rol.Nombre)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="ID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
