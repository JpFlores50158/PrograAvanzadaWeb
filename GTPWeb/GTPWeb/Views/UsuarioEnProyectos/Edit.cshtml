@model GTPWeb.Models.UsuarioEnProyecto

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-light">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title">Editar Rol</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="ProyectoID" />
                        <input type="hidden" asp-for="UsuarioID" />

                        <div class="mb-3">
                            <label asp-for="RolID" class="form-label">Role</label>
                            <select asp-for="RolID" class="form-select" asp-items="ViewBag.RolID">
                                <option value="">Select Role</option>
                            </select>
                            <span asp-validation-for="RolID" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Save" class="btn btn-success px-4" />
                            <a asp-action="Index" asp-controller="Tareas"asp-route-id="@Model.ProyectoID" class="btn btn-secondary">
                                 Back to List
                            </a>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
