@model GTPWeb.Models.Tarea
@inject GTPWeb.Services.IRolesService _rolesService
@inject GTPWeb.Services.IUsuariosPService _usuarioPService
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Detalles de la Tarea</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaVencimiento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaVencimiento)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Prioridad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Prioridad)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Categoria)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Proyecto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Proyecto.Nombre)
                </dd>
                <dt class="col-sm-3">
                    Aisgnado a:
                </dt>
                <dd class="col-sm-9">
                    <p> @_usuarioPService.ListaUsuariosPUsuario(@Model.UsuarioEnProyecto.UsuarioID).Usuario.Nombre</p>
                </dd>
                

               
            </dl>
        </div>
        <div class="card-footer text-end">
            @if (_rolesService.RolUsuario(Context.Session.GetInt32("UserId")).Rol.Nombre == "CoAdmin" || _rolesService.RolUsuario(Context.Session.GetInt32("UserId")).Rol.Nombre == "Admin")
            {
                <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Editar</a>

            }
            
            <a asp-action="Index" asp-route-id="@Model.ProyectoID" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
